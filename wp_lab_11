ZADANIE_5

#include <stdio.h>
#include <stdlib.h>
#include <time.h>

int main()
{
    srand(time(NULL));
    char arr[10][10];
    int tr=1;
    int i,j,y,x;
    printf("Podaj szerokosc tablicy:");
    scanf("%d",&x);
    printf("Podaj wysokosc tablicy");
    scanf("%d",&y);
    srand(time(NULL));

 
    ///deklaracja tablicy
   for(int i=0; i<x; i++)
    {
        for(int j=0; j<y; j++)
        {

            arr[i][j]=rand()%25+97;
            printf("%c ", arr[i][j]);
        }
        printf("\n");
    }

for(i=0; i<x && tr; i++) 
   {
    for(j=0;j<x && tr;j++) 
    {
      if(arr[i][j] == 'l')
        {
        for(int v = -1; v < 2 && tr;v++)
          {
            for(int  w = -1 ; w < 2 && tr; w++ )
            {
              if(arr[i+v][j+w] == 'o')
                {
                  if(arr[i+2*v][j+2*w]=='s')
                    {
                      tr=0;
                    }            
                }
              
            }                                            
          }
        }  
               
    }     
  }
printf("\n");




if(tr==0)
printf("Słowo 'los' znajduje sie w tablicy\n");
else
printf("Slowo nie znajduje się w tablicy\n");

     

    return 0;
}
