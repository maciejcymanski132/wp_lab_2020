ZADANIE_1

#include<stdio.h>
#include <time.h>
#include <stdlib.h>

int main(){
   int x,y;
    printf("Podaj ilosc wierszy : ");
    scanf("%d",&x);
    printf("Podaj ilosc kolumn : ");
    scanf("%d",&y);
   
   srand(time(NULL));
   
   int tab[x][y];
   
   int i, j;
   for(i=0; i<x; i++) {
      for(j=0;j<y;j++) {
         tab[i][j]=rand()%3;
      }
   }
  
   printf("Dwuwymiarowa tablica :\n");
   for(i=0; i<x; i++) {
      for(j=0;j<y;j++) {
         printf("%d ", tab[i][j]);
      }
      printf("\n");  
         
      }
   
   return 0;
}
