ZADANIE_3


#include<stdio.h>
#include <time.h>
#include <stdlib.h>

int main(){
   int x,y,max=0,sum=0;
    printf("Podaj ilosc wierszy : ");
    scanf("%d",&x);
    printf("Podaj ilosc kolumn : ");
    scanf("%d",&y);
   
   srand(time(NULL));
   
   int tab[x][y];
   
   int i, j,a;
   for(i=0; i<x; i++) {
      for(j=0;j<y;j++) {
         tab[i][j]=rand()%20;
      }
   }
  
   printf("Dwuwymiarowa tablica :\n");
   for(i=0; i<x; i++) 
   {
      for(j=0;j<y;j++) 
      {
         printf("%d ", tab[i][j]);
      }
      printf("\n");    
   }
   
   
  for(i=0; i<x; i++) 
   {
      for(j=0;j<y;j++) 
      {
        
        sum = sum + tab[i][j];
        
        if(sum > max)
       { 

        max=sum;
        a=i;

       }
      
      }
      
      sum=0;


      printf("\n"); 
   }
  printf("Najwieksza suma %d w wierszu o indeksie %d",max,a);

   return 0;
}


