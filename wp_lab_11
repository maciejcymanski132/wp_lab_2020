ZADANIE_2



#include<stdio.h>
#include <time.h>
#include <stdlib.h>

int main(){
   int x,y,count=0;
    printf("Podaj ilosc wierszy : ");
    scanf("%d",&x);
    printf("Podaj ilosc kolumn : ");
    scanf("%d",&y);
   
   srand(time(NULL));
   
   int tab[x][y];
   
   int i, j;
   for(i=0; i<x; i++) {
      for(j=0;j<y;j++) {
         tab[i][j]=rand()%20;
      }
   }
  
   printf("Dwuwymiarowa tablica :\n");
   for(i=0; i<x; i++) 
   {
      for(j=0;j<y;j++) 
      {
         printf("%d ", tab[i][j]);
      }
      printf("\n");    
   }
   
  for(i=0; i<x; i++) 
   {
      for(j=0;j<y;j++) 
      {
        if(tab[i][j]!=0)
          count++;
      }
      printf("\n");    
   }
  printf("W tablicy znajduje się %d niezerowych elementów",count);

   return 0;
}

