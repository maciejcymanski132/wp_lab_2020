ZADANIE 7
#include <stdio.h>

int main()
{
    int y = 1,n;
    printf("Podaj n:\n");
    scanf("%d",&n);
    while (y <= n)
    {
      for (int x = 2; x <= y ; x=x+1)
        if (y % x == 0)
        {
          if (y == x)
              printf("%d ", y);
           else
              break;
          }
      y=y+1;
    }

    return 0;
}

