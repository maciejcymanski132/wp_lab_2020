ZADANIE 3

#include <stdio.h>


void fib(int n) {
    int x=0, y=1;
    for(int i=0; i<=n; i++) {
        printf("%d ", y);    
        y=x+y;
        x = y-x;
    }
}
int main() {
    int n;
    printf("Podaj n<20: ");
    scanf("%d", &n);
while(n>=20) {
printf("Niepoprawne n.Podaj n<20\n");
scanf("%d", &n);}
fib(n);
return 0;
}
