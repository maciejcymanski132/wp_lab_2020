A)


#include <stdio.h>


void sum_ele(int* tab,int n) {
  int len = sizeof(*tab)/sizeof(int); 
  int c=0,i;
  for(i=0; i<n; i++)
    {
      c=c+tab[i];
    }
    printf("%d",c);
}

int main(void) {
  int tab1[8]={1,2,3,4,5,6,7,8,};
  int* tab5=tab1;
  sum_ele(tab5,8);
  return 0;
}


B)

#include <stdio.h>


void sum_ele(int* pocz,int* konc) {
  
  int sum=0;
  int *i;
  for(i= pocz ; i != konc ; i++)
    {
      sum=sum+*i;
    }
    printf("%d",sum);
}

int main(void) {
  int tab1[8]={1,2,3,4,5,6,7,8,};
  sum_ele(tab1,tab1+8);
  return 0;
}

