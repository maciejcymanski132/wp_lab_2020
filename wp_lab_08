A)

#include<time.h>
#include<stdlib.h>
#include<stdio.h>


void random_ele(int* tab,int n) {

  int i;

  srand( time( NULL ) ); 


  for(i=0; i<n; i++)
    {
      tab[i]=rand()%20;
    }
    
}

int main(void) {
  int n;
  
  printf("Podaj liczbę elementów: ");
  scanf("%d",&n);
  int tab1[n];
  int* tab5=tab1;
  random_ele(tab5,n);
  for(int i=0;i<n;i++)
    printf("%d element :%d\n",i,tab1[i]);

  
  return 0;
}



B)

#include<time.h>
#include<stdlib.h>
#include<stdio.h>



void random_ele(int* pocz,int* konc) {
  srand( time( NULL ) ); 
  
  int liczba;
  int* i;

  for(i= pocz ; i != konc ; i++)
    
    *i=rand() %20;
     
    }
   


int main(void) {
  int n;
  printf("Podaj liczbę elementów: ");
  scanf("%d",&n);
  int tab1[n];

  int* tab5=tab1;

  random_ele(tab5,tab5+n);

  for(int i=0;i<n;i++)
