A)

#include <stdio.h>


void max_ele(int* tab,int n) {
  int len = sizeof(*tab)/sizeof(int); 
  int c=0,i,max=0;
  for(i=0; i<n; i++)
    {
      if(max<tab[i])
        max=tab[i];
    }
    printf("%d",max);
}

int main(void) {
  int tab1[8]={1,2,3,13,5,26,7,8,};
  max_ele(tab1,8);
  return 0;
}


B)
#include <stdio.h>


void max_ele(int* pocz,int* konc) {
  
  int max=0;
  int *i;
  for(i= pocz ; i != konc ; i++)
    {
      if(max<*i)
        max=*i;
    }
    printf("%d",max);
}

int main(void) {
  int tab1[8]={1,2,3,4,15,6,7,8,};
  max_ele(tab1,tab1+8);
  return 0;
}



