ZADANIE DODATKOWE


#include <stdio.h>
#include <stdlib.h>

int main() {
  int c, n;
    n = rand() % 100 + 1;
    printf("%d",n);
    printf("Podaj numer");
    scanf("%d",&c);
    while(c != n)
      {
        if(c>n)
        {
        printf("Twoj numer jest zbyt duzy");
        scanf("%d",&c);
        }
      
        if(c<n)
        {
        printf("Twój numer jest zbyt mały");
        scanf("%d",&c);
        }

        }
    printf("Odgadłeś numer- Twój numer to:%d",n);
  

  return 0;
}








