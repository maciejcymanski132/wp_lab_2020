ZADANIE_01

#include <stdio.h>

int main()
{
   int n, m;
    printf("Podaj liczbę m: ");
    scanf("%d", &m);
    printf("Podaj liczbę n: ");
    scanf("%d", &n);

    if (n <= 0 || m <= 0)
        printf("Conajmniej jedna z podanych liczb nie jest liczbą naturalną");
    
    else 
    {
        for (int x = 1; x <= n; x++)
        {
          for (int y = 1; y <= m ; y++)
          {
            int multiply = x*y;
            printf("%d ", multiply);
          }
          printf("\n");

        }
    }

    return 0;
}



