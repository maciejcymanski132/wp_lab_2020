#include <stdio.h>

int main(void) {
  unsigned int x ;
  int i=0,tab_bin[100000];
  printf("Podaj liczbę naturalną:\n");
  scanf("%u",&x);
  while(x>0)
  {
    tab_bin[i++]=x%8;
    x=x/8;
  }

  for(int j=i-1; j>=0; j--)
  
 {
  printf("%d",tab_bin[j]);
 }
  return 0;
}



