#include <stdio.h>
#include <math.h>
int main(void) {
  unsigned int x;
  unsigned int y=0;
  int m=0;
  int s,i;
  while(s!=1)
  {
    printf("Podaj liczbę binarna:\n");
    scanf("%u",&x);

    while(x!=0)
    {
    if(x%2 == 1)
      {
        y=y+pow(2,m);
        m++;
        x=x/10;
      }
    else
      {
        x=x/10;
        m++;
      }
    }
    printf("Oto twoja liczba : %d\n",y);
    printf("Czy chcesz zakończyć działanie programu?\n1-Tak\n2-Nie\n");
    scanf("%d",&s);
  }

 
 
  return 0;
}

